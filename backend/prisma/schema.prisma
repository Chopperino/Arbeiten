generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  EMPLOYEE
  EMPLOYER
  ADMIN
  BLOCKED
}

model User {
  id               String      @id @default(uuid())
  email            String      @unique
  password         String
  username         String      @unique
  name             String?
  bio              String?
  role             UserRole
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  createdVacancies Vacancy[]   @relation("CreatedVacancies")
  appliedVacancies Vacancy[]   @relation("AppliedVacancies")
  compleints       Compleint[]
}

enum VacancyStatus {
  OPENED
  CLOSED
}

model Vacancy {
  id           String        @id @default(uuid())
  name         String
  status       VacancyStatus @default(OPENED)
  description  String
  requirements String
  location     String?
  salary       String
  author       User          @relation("CreatedVacancies", fields: [authorId], references: [id])
  authorId     String
  applicants   User[]        @relation("AppliedVacancies")
  compleints   Compleint[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Compleint {
  id          String    @id @default(uuid())
  description String
  vacancies   Vacancy[]
  users       User[]
}
